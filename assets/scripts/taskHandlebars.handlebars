{{#each tasks as |task|}}
<table id="user-tasks-table" class="table table-striped signed-in-view">

  <thead>
    <tr>
      <th>#</th>
      <th>Description</th>
    </tr>
  </thead>

      <tr>
        <td>{{task.id}}</td>
        <td>{{task.description}}</td>
        <td><button id="deleteTask" taskId="{{task.id}}" type="click" class="btn btn-danger">Delete</button></td>
        <td><button value="update" class="btn btn-info">Edit</button></td>
      </tr>

</table>
{{/each}}
