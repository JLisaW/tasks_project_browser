<table id="user-tasks-table" class="table table-striped signed-in-view">

  <thead>
    <tr>
      <th>Task #</th>
      <th>Description</th>
    </tr>
  </thead>
{{#each tasks as |task|}}
      <tr>
        <td>{{task.id}}</td>
        <td>{{task.description}}</td>
        <td><button taskId="{{task.id}}" type="click" class="btn btn-danger delete-task-button">Delete</button></td>
        <td><form class="update-task-by-id-form" taskId="{{task.id}}">
            <input type="text" id="update-task-by-id-button" name="task[description]">
            <input type="hidden" name="id" value="{{task.id}}">
        <button taskId="{{task.id}}" type="submit" task="text" class="btn btn-info update-task-button">Edit</button>
      </form>
      </tr>

{{/each}}
</table>
