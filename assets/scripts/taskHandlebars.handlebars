{{#each tasks as |task|}}
<table id="user-tasks-table" class="table table-striped signed-in-view">

  <thead>
    <tr>
      <th>#</th>
      <th>Description</th>
    </tr>
  </thead>

      <tr>
        <td>{{task.id}}</td>
        <td>{{task.description}}</td>
        <td><button taskId="{{task.id}}" type="click" class="btn btn-danger delete-task-button">Delete</button></td>
        <td><button taskId="{{task.id}}" type="submit" "text" class="btn btn-info update-task-button">Edit</button></td>
      </tr>

</table>
{{/each}}
